<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F4"
    tools:context=".pointsActivity">

    <!-- Profile Picture -->

    <!-- Current Mood Label -->

    <!-- Mood Text -->

    <!-- XP Label -->

    <!-- XP Value -->

    <!-- Star Rating Row -->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_color"
            app:srcCompat="@drawable/home_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/points_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/xp_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/profile_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/credits_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/settings_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:background="#03A9F4"
            android:paddingTop="10dp"
            android:text="POINTS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="375dp"
            android:layout_height="250dp"
            android:background="@color/light_primary">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="325dp"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:translationX="25dp"
                android:translationY="25dp"
                app:srcCompat="@drawable/background" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:translationX="112dp"
                android:translationY="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:rotation="-45"
                android:translationX="50dp"
                android:translationY="90dp"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="102dp"
                android:translationY="35dp"
                tools:srcCompat="@drawable/ic_launcher_background" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:background="@color/light_primary"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8_xpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:backgroundTint="#4BCBFF"
                android:gravity="center"
                android:text="TOTAL XP"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pointsTotalXP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="" />

            <TextView
                android:id="@+id/textViewXPNeeded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:backgroundTint="#4BCBFF"
                android:gravity="center"
                android:text="XP NEED FOR NEXT UNLOCK"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xpNeeded"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="" />

            <TextView
                android:id="@+id/tasksaccomp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_default"
                android:backgroundTint="#4BCBFF"
                android:gravity="center"
                android:text="LIFETIME TASKS COMPLETED"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lifetime_tasks"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>