<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F4"
    tools:context=".pointsActivity">

    <!-- Profile Picture -->

    <!-- Current Mood Label -->

    <!-- Mood Text -->

    <!-- XP Label -->

    <!-- XP Value -->

    <!-- Star Rating Row -->

    <LinearLayout
        android:id="@+id/starLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pointsTotalXP"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_color"
            app:srcCompat="@drawable/home_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/points_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/xp_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/profile_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/credits_button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            app:srcCompat="@drawable/settings_nav_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="666dp"
        android:layout_marginStart="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:translationX="75dp"
                android:translationY="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:rotation="-45"
                android:translationY="90dp"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationX="65dp"
                android:translationY="35dp"
                tools:srcCompat="@drawable/ic_launcher_background" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView8_xpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="Total XP"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pointsTotalXP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="" />

        <TextView
            android:id="@+id/textViewXPNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="XP Needed For Next Unlock"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xpNeeded"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="" />

        <TextView
            android:id="@+id/tasksaccomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="Lifetime Tasks Completed:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lifetime_tasks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>