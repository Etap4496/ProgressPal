<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_primary"
    android:backgroundTint="#D7F1F4"
    tools:context=".profileCustomizationActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:background="@color/background_color"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:background="@color/primary_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="300dp"
                android:layout_height="67dp"
                android:background="#03A9F4"
                android:paddingTop="10dp"
                android:text="CUSTOMIZATION"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primary_color"
                android:text="X"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:background="@color/light_primary"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mascot_header"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@color/light_primary"
                android:paddingTop="5dp"
                android:text="MASCOT COLOR:"
                android:textAlignment="textStart"
                android:textColor="@color/dark_primary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4BCBFF"
                android:gravity="right|top"
                android:orientation="vertical">

            </LinearLayout>

            <Spinner
                android:id="@+id/mascot_colors"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/primary_color"
                android:entries="@array/mascot_colors" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="350dp"
            android:background="@color/light_primary"
            android:gravity="center|top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="350dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hats_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hat_selections"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="HATS" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/no_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@android:drawable/ic_delete" />

                            <ImageButton
                                android:id="@+id/blue_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/blue_hat" />

                            <ImageButton
                                android:id="@+id/green_blue_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/green_blue_hat" />

                            <ImageButton
                                android:id="@+id/red_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/red_hat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/black_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/black_hat" />

                            <ImageButton
                                android:id="@+id/green_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/green_hat" />

                            <ImageButton
                                android:id="@+id/purple_hat"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/purple_hat" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="350dp"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/staffs_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/staff_selections"
                    android:textColor="@color/dark_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="STAFFS" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/no_staff"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@android:drawable/ic_delete" />

                        <ImageButton
                            android:id="@+id/purple_staff"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/purple_staff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/green_staff"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/green_staff" />

                        <ImageButton
                            android:id="@+id/red_staff"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:backgroundTint="@color/white"
                            app:srcCompat="@drawable/red_staff" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:background="@color/light_primary"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <EditText
                android:id="@+id/change_name"
                android:layout_width="236dp"
                android:layout_height="62dp"
                android:ems="10"
                android:hint="Change Mascot Name"
                android:inputType="text"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_color"
                android:text="CONFIRM NAME"
                android:textColorLink="@color/primary_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>